<style>
  .col-card {
    padding-bottom: 25px;
  }
</style>


<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Products</h1><br>
    </div>
    <div class="col-auto">
      <%= link_to 'New Product', new_product_path, class:"btn btn-success" %><br><br>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col col-card">
        <div class="card" style="width: 18rem;">
          <% if product.product_picture.attached? %>
            <img src="<%=(url_for(product.product_picture))%>" class="card-img-top" alt="...">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text">Price: $<%= product.price %></p>
            <p class="card-text"><%= product.inventory %> Remaining</p>

            <%= link_to 'Show', product, class:"btn btn-primary" %>
            <%= link_to 'Edit', edit_product_path(product), class:"btn btn-warning"  %>
            <%= link_to 'Destroy', product, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
 


<br>


